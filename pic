  <script>
    document.querySelector('input[name="file1"]').addEventListener('change', function() {
      previewImage(this, 'img1');
    });
    document.querySelector('input[name="file2"]').addEventListener('change', function() {
      previewImage(this, 'img2');
    });
    document.querySelector('input[name="file3"]').addEventListener('change', function() {
      previewImage(this, 'img3');
    });
    document.querySelector('input[name="file4"]').addEventListener('change', function() {
      previewImage(this, 'img4');
    });

    function previewImage(input, imgId) {
      var reader = new FileReader();
      reader.onload = function(e) {
        var imgElement = document.getElementById(imgId);
        imgElement.src = e.target.result;
      };
      reader.readAsDataURL(input.files[0]);
    }

    document.getElementById('fontSelect').addEventListener('change', function() {
      var selectedFont = this.value;
      var textInputs = document.querySelectorAll('input[type="text"]');
      textInputs.forEach(function(input) {
        input.style.fontFamily = selectedFont;
      });
    });

    document.getElementById('sizeSelect').addEventListener('change', function() {
      var selectedSize = this.value;
      var textInputs = document.querySelectorAll('input[type="text"]');
      textInputs.forEach(function(input) {
        input.style.fontSize = selectedSize;
      });
    });
  </script>
